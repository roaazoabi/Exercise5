<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Please Register Here 🖋️</h1>
    <% if (locals.user) { %>
      <form action="/register" method="POST">
        <div>
          <label id="lb">Email Address</label>
          <input type="email" name="Email" value="<%= locals.user.Email %>" required minlength="3" maxlength="32"></input>
        </div>
        <% if (locals.errorMessage) { %>
          <h5 id="error"><%= locals.errorMessage %></h5>
        <% } %>
        <br>
        <div>
          <label id="lb">First Name</label>
          <input type="text" name="First Name" value="<%= locals.user.firstName %>" required minlength="3" maxlength="32"></input>
        </div>
        <br>
        <div>
          <label id="lb">Last Name</label>
          <input type="text" name="Last Name" value="<%= locals.user.lastName %>" required minlength="3" maxlength="32"></input>
        </div>
        <br>
        <div>
          <button type="submit" id="" name="done">Submit</button>
        </div>
        <br>
      </form>
    <% } else { %>
      <form action="/register" method="POST">
        <div>
          <label id="lb">Email Address</label>
          <input type="email" name="Email" required minlength="3" maxlength="32"></input>
        </div>
        <% if (locals.errorMessage) { %>
          <h5 id="error"><%= locals.errorMessage %></h5>
        <% } %>
        <br>
        <div>
          <label id="lb">First Name</label>
          <input type="text" name="First Name" required minlength="3" maxlength="32"></input>
        </div>
        <br>
        <div>
          <label id="lb">Last Name</label>
          <input type="text" name="Last Name" required minlength="3" maxlength="32"></input>
        </div>
        <br>
        <div>
          <button type="submit" id="" name="done">Submit</button>
        </div>
      </form>
    <% } %>
    <br>
    <form action="/" method="GET">
      <button type="submit">Log In 👇🏻</button>
    </form>
    <% if (locals.registered) { %>
      <h5 style="color: green;"><%= locals.registered %></h5>
    <% } %>
  </body>
</html>
