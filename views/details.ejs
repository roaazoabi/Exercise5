<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Please Register Here 🙆🏻</h1>
    
    <% if (userDetails) { %>
      <h1><%= userDetails['First Name'] %></h1>
      <form action="/" method="POST">
        <div>
          <label id="lb">Email Address</label>
          <input type="email" name="Email" value="<%= userDetails.Email %>" required minlength="3" maxlength="32"></input>
        </div>
        <% if (locals.errorMessage) { %>
          <h5 id="error"><%= locals.errorMessage %></h5>
        <% } %>
        <br>
        <div>
          <label id="lb">First Name</label>
          <input type="text" name="First Name" value="<%= userDetails['First Name'] %>" required minlength="3" maxlength="32"></input>
        </div>
        <br>
        <div>
          <label id="lb">Last Name</label>
          <input type="text" name="Last Name" value="<%= userDetails['Last Name'] %>" required minlength="3" maxlength="32"></input>
        </div>
        <br>
        <div>
          <button type="submit" id="login_details" name="done">Submit</button>
        </div>
      </form>
    <% } else { %>
      <h1>No Cookies!</h1>
      <form action="/" method="POST">
        <div>
          <label id="lb">Email Address</label>
          <input type="email" name="Email" required minlength="3" maxlength="32"></input>
        </div>
        <% if (locals.errorMessage) { %>
          <h5 id="error"><%= locals.errorMessage %></h5>
        <% } %>
        <br>
        <div>
          <label id="lb">First Name</label>
          <input type="text" name="First Name" required minlength="3" maxlength="32"></input>
        </div>
        <br>
        <div>
          <label id="lb">Last Name</label>
          <input type="text" name="Last Name" required minlength="3" maxlength="32"></input>
        </div>
        <br>
        <div>
          <button type="submit" id="login_details" name="done">Submit</button>
        </div>
      </form>
    <% } %>
  </body>
</html>